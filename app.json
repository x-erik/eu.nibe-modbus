      "getable": true,
      "setable": false,
      "units": {
        "en": ""
      },
      "insights": true,
      "chartType": "spline"
    }
  },
  "discovery": {
    "nibe-mdns": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "nibejpi-restapi",
        "protocol": "tcp"
